{
	"name": "canis/yii2-broadcaster",
	"description": "Broadcast events in Yii2 applications to several endpoints",
	"keywords": ["yii2", "broadcast"],
	"type": "yii2-extension",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Jacob Morrison",
			"email": "jacob@canis.io"
		}
	],
	"require": {
		"yiisoft/yii2": "2.0.*",
		"canis/yii2-canis-lib": "1.*",
		"yiisoft/yii2-swiftmailer": "2.0.*",
		"bower-asset/bootstrap-select": "1.7.*",
		"guzzlehttp/guzzle": "6.1.*"
	},
	"autoload": {
		"psr-4": { "canis\\broadcaster\\": "lib" }
	},
	"extra": {
		"bootstrap": "canis\\broadcaster\\Bootstrap"
	}
}
